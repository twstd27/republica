---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { FeatureItem } from "~/types";

const features: Array<FeatureItem> = [
  {
    title: "Acceso a Internet de Alta Velocidad",
    description:
      "Proporcionamos conexión a Internet rápida y confiable para los clientes",
    icon: "mdi:speedometer",
  },
  {
    title: "Equipos de gran rendimiento para juegos",
    description:
      "Ofrecemos computadoras de calidad con hardware actualizado y software esencial instalado",
    icon: "mdi:laptop-chromebook",
  },
  {
    title: "Wi-Fi Gratuito",
    description:
      "Proporcionamos acceso Wi-Fi gratuito para nuestros clientes",
    icon: "mdi:wifi-lock-open",
  },
  {
    title: "Ambiente Cómodo",
    description:
      "Entorno acogedor con asientos cómodos, iluminación adecuada y música agradable",
    icon: "mdi:chair-rolling",
  },
  {
    title: "Eventos",
    description:
      "Organizamos eventos, campeonatos y concursos con premios de nuestros proveedores",
    icon: "mdi:gift",
  },
  {
    title: "Amanecidas",
    description:
      "Todos los sábados amanecidas a los mejores precios",
    icon: "mdi:moon-waning-crescent",
  },
];
---

<ContentSection title="Servicios" id="servicios">
  <!-- <Fragment slot="lead">
    Astro comes <span class="text-primary">batteries included</span>. It takes
    the best parts of
    <span class="text-primary">state-of-the-art</span>
    tools and adds its own <span class="text-primary">innovations</span>.
  </Fragment> -->
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
